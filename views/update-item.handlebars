<h1>Update {{item.item_type}} {{item.name}} {{item.brand}} {{item.substyle}} {{item.user}}:</h1>
<form id="update-person" action="/people" method="post">
    Type: <select name="type" id="type-selector"> 
        {{#each item_types}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    Name: <input type="text" name="name" value="{{item.name}}"><br>
    Brand: <select name="brand" id="brand-selector"> 
        {{#each brands}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    Substyle: <select name="substyle" id="substyle-selector"> 
        {{#each substyles}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
</form>
<button onclick="updateItem({{item.id}})">Update</button>
<script defer>selectType({{item.type}});</script>
<script defer>selectBrand({{item.brand}});</script>
<script defer>selectSubstyle({{item.substyle}});</script>